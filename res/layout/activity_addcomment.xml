<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <include layout="@layout/add_comment_title" />

    <RelativeLayout
        android:id="@+id/add_comment_imgLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/comment_frame" >

        <ImageView
            android:id="@+id/add_comment_image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:scaleType="center"
            android:src="@drawable/comment_img" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/ScrollView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/comment_frame" >

        <TableRow
            android:id="@+id/TableRowContent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/make_comment"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:hint="请输入评论内容"
                android:padding="5dp"
                android:textSize="18sp" >
            </EditText>
        </TableRow>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/comment_frame"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/loc_icon" 
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/add_comment_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="城西银泰城"
            android:textColor="@color/gray" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/loc_icon" />

        <TextView
            android:id="@+id/add_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Love Love(城西)店"
            android:textColor="@color/gray" />
    </LinearLayout>

    <Button
        android:id="@+id/submit_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:background="@drawable/comment_frame"
        android:text="发表评论" 
        android:textColor="@color/title"/>

</LinearLayout>