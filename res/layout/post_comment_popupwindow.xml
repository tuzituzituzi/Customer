<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post_comment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_background"
    android:orientation="vertical" >

    <View
        android:id="@+id/post_commnet_blank_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="5dp" >

        <EditText
            android:id="@+id/square_comment_edit"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="top" />

        <Button
            android:id="@+id/post_comment_but"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/square_comment_edit"
            android:layout_marginTop="2dp"
            android:background="@drawable/post_but" />
    </RelativeLayout>

</LinearLayout>