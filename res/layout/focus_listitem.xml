<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="10dp" >

    <com.whut.util.CircleImageView
        android:id="@+id/focus_listitem_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/a" />

    <TextView
        android:id="@+id/focus_listitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/focus_listitem_img"
        android:text="神经病" />

    <LinearLayout
        android:id="@+id/focus_listitem_isfollow_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/isFocus_bg"
        android:padding="5dp"
        android:tag="1" >

        <TextView
            android:id="@+id/focus_listitem_isfollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已关注"
            android:textColor="@color/black" />
    </LinearLayout>

    <!--
         <ImageView
        android:id="@+id/focus_listitem_follow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/follow_icon" />
    -->

</RelativeLayout>