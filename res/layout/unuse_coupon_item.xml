<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/coupon_bg" >

    <com.whut.util.CircleImageView
        android:id="@+id/unuse_coupon_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/a" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/unuse_coupon_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/unuse_coupon_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价值20元招牌奶茶一壶"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/unuse_coupon_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年5月1日"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/unuse_coupon_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年5月31日"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/more_icon" />

</RelativeLayout>