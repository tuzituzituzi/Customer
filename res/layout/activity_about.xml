<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi大数据线下广告用户端"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/about_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用条款和隐私"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/about_title"
        android:layout_marginTop="100dp"
        android:textColor="@color/blue"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/about_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中国普天信息产业股份有限公司"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/about_rules"
        android:layout_marginTop="20dp"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/about_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://www.potevio.com"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/about_company"
        android:layout_marginTop="20dp"
        android:textSize="12sp" />

</RelativeLayout>
